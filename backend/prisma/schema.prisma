// Prisma schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

// Models

model CurrencyPrice {
  id        Int      @id @default(autoincrement())
  symbol    String  
  price     Decimal  @db.Decimal(10,2)
  date      DateTime 
  createdAt DateTime @default(now())

  @@unique([symbol, date])
  @@map("currency_prices")
}
